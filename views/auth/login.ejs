<%-include(`../includes/start.ejs`)%> 
  <div id="app--container">
    <main class="app--content">
      <div class="header--logo">
        <img src="/logo/logo.png" class="logoImg"/>
      </div>
      <div class="header--content">
        <h1 class="header--content--heading">Welcome Back</h1>
        <p class="header--content--subheading">
          Don't miss your next opportunity.<br> Sign in to stay updated on your
          professional world.
        </p>
      </div>
      <form class="login--form" action="/login" id="login--form" method="post">
        <div class="form--input--floating">
          <label class="form--label--floating" id="label--email">
            Email or Phone
          </label>
          <input id="input--email" type="email" autocomplete="false" name="email"/>
        </div>
        <div class="form--input--floating">
          <label class="form--label--floating" id="label--password"
            >Password</label
          >
          <input id="input--password" type="password" name="password"/>
        </div>
        <div class="login--form--forgot--container">
          <a href="#" class="linkStyle">Forgot password?</a>
        </div>
        <% if(errorMessage){%>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div
          class="login--form-container login--form-container--multiple-actions"
        >
          <button
            id="loginButton"
            class="btn btn-lg btn-primary"
            type="submit"
            aria-label="Sign in"  
          >
            Sign in
          </button>
          <button
            class="btn btn-lg btn-secondary"
            aria-label="Cancel"
          >
            Cancel
          </button>
        </div>
      </form>
      <div class="footer-app-content-actions">
        <p>
          New to Mascot?
          <a href="/signup" class="linkStyle">Join now</a>
        </p>
      </div>
    </main>
  </div>
<!-- <script src="/scripts/login.js"></script> -->
<%-include(`../includes/end.ejs`)%>